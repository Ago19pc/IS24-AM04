<AnchorPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="run.ChooseStartingCardController">
   <children>
      <ImageView fitHeight="768.0" fitWidth="1024.0" layoutX="139.0" pickOnBounds="true" preserveRatio="true" scaleX="1.37" scaleY="1.01">
         <image>
            <Image url="@./images/otherImages/logovuoto.jpg" />
         </image>
      </ImageView>
      <ImageView fx:id="chosenCard" fitHeight="150.0" fitWidth="200.0" layoutX="414.0" layoutY="264.0" onMouseClicked="#chooseFirstCard" pickOnBounds="true" preserveRatio="true" />
      <ImageView fx:id="firstCard" fitHeight="150.0" fitWidth="200.0" layoutX="692.0" layoutY="168.0" onMouseClicked="#chooseFirstCard" pickOnBounds="true" preserveRatio="true" />
      <ImageView fx:id="secondCard" fitHeight="150.0" fitWidth="200.0" layoutX="692.0" layoutY="350.0" onMouseClicked="#chooseSecondCard" pickOnBounds="true" preserveRatio="true" />
      <Text fx:id="waitText" layoutX="415.0" layoutY="565.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Waiting for other players" textAlignment="CENTER">
         <font>
            <Font size="19.0" />
         </font></Text>
      <Text fx:id="backFaceText" layoutX="502.0" layoutY="252.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Back Face">
         <font>
            <Font size="32.0" />
         </font>
      </Text>
      <Text fx:id="frontFaceText" layoutX="502.0" layoutY="432.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Front Face">
         <font>
            <Font size="32.0" />
         </font>
      </Text>
      <Text fx:id="chosenCardText" layoutX="435.0" layoutY="253.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" textAlignment="CENTER">
         <font>
            <Font size="32.0" />
         </font>
      </Text>
      <Button fx:id="confirmButton" disable="true" layoutX="435.0" layoutY="526.0" mnemonicParsing="false" onMouseClicked="#confirmationButtonPressed" prefHeight="65.0" prefWidth="157.0" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-radius: 3; -fx-border-radius: 3;" text="Confirm">
         <font>
            <Font size="32.0" />
         </font></Button>
      <Label layoutX="252.0" layoutY="19.0" style="-fx-background-color: eae1b8; -fx-background-radius: 5;" text="Choose a face to start your manuscript ">
         <font>
            <Font size="32.0" />
         </font>
      </Label>
      <ListView fx:id="chat_message" layoutY="100.0" prefHeight="350.0" prefWidth="250.0" />
      <TextField fx:id="messageToSend" layoutY="450.0" prefHeight="45.0" prefWidth="250.0" />
      <Button fx:id="sendButton" layoutX="263.0" layoutY="434.0" mnemonicParsing="false" onAction="#sendMessages"  prefHeight="59.0" prefWidth="119.0" style="-fx-background-color: eae1b8; -fx-border-color: white; -fx-border-radius: 3; -fx-border-radius: 3;" text="Send">
         <font>
            <Font size="32.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
